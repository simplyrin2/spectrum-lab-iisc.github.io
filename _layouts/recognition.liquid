---
layout: default
---

<!-- Page Header with H1 for SEO -->
<header class="post-header">
  <h1 class="post-title">{{ page.title }}</h1>
  {% if page.description %}
    <p class="post-description">{{ page.description }}</p>
  {% endif %}
</header>

<!-- Page content (from markdown) -->
{{ content }}

<!-- Recognition display -->
  <div class="recognition-list">
    {%- for item in site.data.recognition.awards -%}
      <div class="recognition-item">
        <!-- Year -->
        <div class="recognition-item__year">
          {%- if item.year and item.year != "" -%}
            {{ item.year | split: "," | first }}
          {%- else -%}
            <span style="opacity: 0.5;">â€”</span>
          {%- endif -%}
        </div>

        <!-- Content -->
        <div class="recognition-item__content">
          <!-- Image (Optional) -->
          {%- if item.image or item.images -%}
            {%- assign img_path = item.image | default: item.images[0].path -%}
            <div class="recognition-item__image">
              <img src="{{ img_path | relative_url }}" alt="{{ item.award }}" loading="lazy" class="recognition-photo">
            </div>
          {%- endif -%}

          <!-- Text Details -->
          <div class="recognition-item__details">
            <div class="recognition-item__header">
              <h3 class="recognition-item__title">{{ item.award | link_coauthors }}</h3>
              {%- if item.category -%}
                <span class="recognition-item__badge">{{ item.category }}</span>
              {%- endif -%}
            </div>

            {%- if item.recipients -%}
              <p class="recognition-item__subtitle">
                {{ item.recipients | link_coauthors }}
              </p>
            {%- endif -%}

            {%- if item.co_inventors -%}
              <p class="recognition-item__subtitle">
                <i class="fas fa-users" style="font-size: 0.8em; margin-right: 4px;"></i> 
                {{ item.co_inventors | link_coauthors }}
              </p>
            {%- endif -%}
            
            {%- if item.description -%}
              <p class="recognition-item__desc">{{ item.description | link_coauthors }}</p>
            {%- endif -%}
          </div>
        </div>

        <!-- Icon (Right) -->
        <div class="recognition-item__icon">
          {%- if item.category == "Award" -%}
            <i class="fas fa-trophy"></i>
          {%- elsif item.category == "Grant" -%}
            <i class="fas fa-coins"></i>
          {%- elsif item.category == "Service" -%}
            <i class="fas fa-handshake"></i>
          {%- else -%}
            <i class="fas fa-star"></i>
          {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
  
  {% if site.data.recognition.awards.size == 0 %}
    <div class="text-center py-5">
      <div class="alert alert-secondary">
        <i class="fas fa-award"></i>
        <h4>No recognition recorded yet</h4>
        <p>Check back soon for updates on our achievements!</p>
      </div>
    </div>
  {% endif %}
</div>

<!-- Optional: Add modal for full-size image viewing -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="imageModalLabel">Recognition</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" data-mdb-dismiss="modal" aria-label="Close" id="recognitionModalCloseBtn"></button>
      </div>
      <div class="modal-body text-center">
        <img id="modalImage" src="" class="img-fluid" alt="">
        <p id="modalCaption" class="mt-2 text-muted"></p>
      </div>
    </div>
  </div>
</div>

<script>
// Add click handlers for image modal (optional enhancement)
document.addEventListener('DOMContentLoaded', function() {
  const recognitionPhotos = document.querySelectorAll('.recognition-photo');
  const modal = new bootstrap.Modal(document.getElementById('imageModal'));
  const modalImage = document.getElementById('modalImage');
  const modalCaption = document.getElementById('modalCaption');
  
  recognitionPhotos.forEach(function(photo) {
    photo.addEventListener('click', function() {
      modalImage.src = this.src;
      modalImage.alt = this.alt;
      modalCaption.textContent = this.alt;
      
      // Show modal and enhance backdrop
      modal.show();
      
      // Enhance backdrop blur after modal is shown
      setTimeout(() => {
        const backdrop = document.querySelector('.modal-backdrop');
        if (backdrop) {
          backdrop.style.backdropFilter = 'blur(10px)';
          backdrop.style.webkitBackdropFilter = 'blur(10px)';
        }
      }, 100);
    });
    
    // Add pointer cursor to indicate clickability
    photo.style.cursor = 'pointer';
  });
  
  // Ensure close button works with both Bootstrap and MDB
  const closeBtn = document.getElementById('recognitionModalCloseBtn');
  if (closeBtn) {
    closeBtn.addEventListener('click', function() {
      modal.hide();
    });
  }
  
  // Also handle ESC key and backdrop clicks
  document.getElementById('imageModal').addEventListener('click', function(e) {
    if (e.target === this) {
      modal.hide();
    }
  });
  
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && document.getElementById('imageModal').classList.contains('show')) {
      modal.hide();
    }
  });

  // Initialize recognition swipers
  const recognitionSwipers = document.querySelectorAll('.recognition-swiper');
  recognitionSwipers.forEach(function(swiperEl) {
    new Swiper(swiperEl, {
      slidesPerView: 1,
      spaceBetween: 0,
      loop: true,
      speed: 800,
      autoplay: {
        delay: 4000,
        disableOnInteraction: false,
      },
      pagination: {
        el: swiperEl.querySelector('.swiper-pagination'),
        clickable: true,
      },
    });
  });
});
</script>