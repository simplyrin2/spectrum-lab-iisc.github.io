<div class="recognition">
  <div class="container-md">
    <h3 class="mb-4">Awards</h3>
    <div class="awards-grid">
      {%- assign awards = site.data.recognition.awards | where: "category", "Award" -%}
      {%- assign sorted_awards = awards | sort: "year" | reverse -%}
      {%- for award in sorted_awards -%}
      <div class="award-card">
        <div class="award-content">
          {% if award.url %}
            <h6 class="mb-1 text-primary">
              <a href="{{ award.url }}" target="_blank" rel="noopener noreferrer">{{ award.name }}</a>
            </h6>
          {% else %}
            <h6 class="mb-1 text-primary">{{ award.name }}</h6>
          {% endif %}
          <p class="mb-1">{{ award.award | link_coauthors }}</p>
          {% if award.co_inventors %}
            <small class="text-muted">Co-inventors: {{ award.co_inventors | link_coauthors }}</small>
          {% endif %}
          {% if award.image %}
          <div class="award-image">
            {% include responsive-image.liquid path=award.image alt=award.name class="img-fluid" %}
          </div>
          {% endif %}
        </div>
        {% if award.year %}
        <div class="award-year">
          <small class="text-muted">{{ award.year }}</small>
        </div>
        {% endif %}
      </div>
      {%- endfor -%}
    </div>
  </div>
</div>